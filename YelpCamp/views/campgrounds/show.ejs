<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src="<%= campground.image %>" class="card-img-top mb-2" alt="">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= campground.location %>
                    </li>
                    <li class="list-group-item">¥<%= campground.price %>/泊</li>
                </ul>
                <div class="card-body">
                    <a class="btn btn-info" href="/campgrounds/<%= campground._id %>/edit">編集</a>
                    <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">削除</button>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    2 days ago
                </div>
            </div>
            <h2>レビュー</h2>
            <form action="" class="mb-3">
                <div class="mb-3">
                    <label for="rating" class="form-label">評価</label>
                    <input class="form-range" type="range" min="1" max="5" class="form-range" id="rating"
                        name="review[rating]">
                </div>
                <div class="mb-3">
                    <label for="body" class="form-label">コメント</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"></textarea>
                </div>
                <button class="btn btn-success">投稿</button>
            </form>
        </div>
    </div>