<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">
            キャンプ場の編集
        </h1>
        <div class="offset-3 col-md-6">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" novalidate
                class="validated-form">
                <div class="mb-3">
                    <label for="title" class="form-lebel">タイトル</label>
                    <input class="form-control" type="text" name="campground[title]" id="title"
                        value="<%= campground.title %>">
                    <div class="valid-feedback">
                        good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-lebel" for="location">場所</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required
                        value="<%= campground.location %>">
                    <div class="valid-feedback">
                        good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-lebel" for="image">画像URL</label>
                    <input class="form-control" type="text" name="campground[image]" id="image" required
                        value="<%= campground.image %>">
                    <div class="valid-feedback">
                        good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-lebel" for="price">価格</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price">¥</span>
                        <input type="text" class="form-control" id="price" placeholder="0" aria-label="価格"
                            aria-describedby="price-label" name="campground[price]" value="<%= campground.price %>"
                            required>
                        <div class="valid-feedback">
                            good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-lebel" for="description">説明</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description"
                        required><%= campground.description %>  </textarea>
                    <div class="valid-feedback">
                        good!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">更新</button>
                </div>
            </form>
            <a href="/campgrounds">一覧に戻る</a>
        </div>
    </div>